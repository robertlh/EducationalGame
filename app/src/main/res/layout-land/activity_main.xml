<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.jcu.robertpeters.educationalgame.MainActivity">

    <fragment android:name="sg.jcu.robertpeters.educationalgame.StartFragment"
        android:id="@+id/startFragment"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <fragment
        android:name="sg.jcu.robertpeters.educationalgame.HighScoreFragment"
        android:id="@+id/HighscoreFragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"

</LinearLayout>